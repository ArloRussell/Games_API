<%- include("partials/header.ejs") %>
<header>
    <div class="container">
        <div class="row">
            <h1 class="page-title">Games!</h1>
        </div>
        <div class="row">
            <form method="GET" class="mb-3">
                <div class="input-group">
                    <input type="text" class="form-control form-control-lg" placeholder="search" id="searchtext" name="like" vaule="<%= search %>">
                    <div class="input-group-append">
                        <button class="btn btn-primary btn-lg rounded-start-0" type="submit" id="searchbutton">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="container results">
            <% for(let game of gameData) { %>
                <a href="/game/<%=game.game_id%>" class="unstyled-link text-decoration-none">
                    <div class="card mb-2 border-0">
                        <div class="row">
                            <div class="col-md-2">
                                <img src='<%=game.cover.replace("t_thumb", "t_720p")%>' alt="" class="card-img rounded-end-0">
                            </div>
                            <div class="col-md-10">
                                <div class="card-body">
                                    <h5 class="card-title colorful-text"><%= game.name %></h5>
                                    <p class="card-text"><%= game.summary %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    </div>
</header>

<%- include("partials/footer.ejs") %>
